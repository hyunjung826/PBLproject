<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RescueLoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editSearch"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="@dimen/padding_8"
                android:padding="@dimen/padding_12"
                android:layout_marginTop="@dimen/margin_top_16"
                android:layout_marginLeft="@dimen/margin_left_16"
                android:layout_marginRight="@dimen/margin_right_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/curated_light"
                android:hint="소방서를 검색하세요."
                android:ems="10"
                android:completionThreshold="2"
                android:inputType="textNoSuggestions" />

            <ListView
                android:id="@+id/fire_listview"
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:layout_marginTop="@dimen/margin_top_8"
                android:textFilterEnabled="true"
                android:divider="#999999"
                android:dividerHeight="1dp"/>

            <Button
                android:id="@+id/select_firestation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="소방서 선택하기" />

            <TextView
                android:id="@+id/result_firestation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>