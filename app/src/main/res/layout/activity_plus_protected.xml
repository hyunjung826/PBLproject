<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlusProtectedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="319dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_top_16"
                android:layout_marginBottom="@dimen/margin_bottom_16"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_16">

                <LinearLayout
                    android:layout_width="377dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_16"
                    android:layout_marginTop="@dimen/margin_top_16"
                    android:layout_marginRight="@dimen/margin_right_16"
                    android:layout_marginBottom="@dimen/margin_bottom_16"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_certification_num"
                        style="@style/Font_family_regular"
                        android:layout_width="257dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_8"
                        android:layout_marginRight="@dimen/margin_right_8"
                        android:layout_marginBottom="@dimen/margin_bottom_8"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-regular"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_16"
                        android:paddingBottom="@dimen/padding_16"
                        android:text="인증번호"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_24"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_explain_num"
                        style="@style/Font_family_regular"
                        android:layout_width="349dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_4"
                        android:layout_marginRight="@dimen/margin_right_4"
                        android:layout_marginBottom="@dimen/margin_bottom_4"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-regular"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_16"
                        android:paddingBottom="@dimen/padding_16"
                        android:text="보호대상이 생성한 인증번호 6자리를 입력해주세요."
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="299dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:layout_marginTop="@dimen/margin_top_4"
                        android:layout_marginRight="@dimen/margin_right_16"
                        android:layout_marginBottom="@dimen/margin_bottom_4"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txt_protected_number"
                            style="@style/Font_family_light"
                            android:layout_width="187dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_bottom_4"
                            android:background="@color/curated_light"
                            android:hint="보호대상 인증번호"
                            android:inputType="phone"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:padding="@dimen/padding_16"
                            android:textSize="@dimen/text_14"
                            android:textStyle="normal" />

                        <Button
                            android:id="@+id/btn_finish_protected"
                            style="@style/Font_family_regular"
                            android:layout_width="91dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginLeft="@dimen/margin_right_16"
                            android:layout_marginBottom="@dimen/margin_bottom_4"
                            android:background="@drawable/red_style3"
                            android:text="확인"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_18" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>